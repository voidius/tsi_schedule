!!!
%html
  %head
    %title
      TsiSchedule
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags

  %body
    .container

      - if user_signed_in?
        = link_to "Sign out", destroy_user_session_path, method: :delete
      - else
        = link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook)

      - if notice
        %p.notice
          = notice
      - if alert
        %p.alert
          = alert
      = yield
